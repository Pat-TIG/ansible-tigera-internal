resource "aws_iam_instance_profile" "worker" {
  count = var.cloud_provider == true ? 1 : 0
  name  = "${var.env_name}-worker-profile"
  role  = aws_iam_role.worker_role[0].name
}

resource "aws_iam_role" "worker_role" {
  count = var.cloud_provider == true ? 1 : 0
  name = "${var.env_name}-worker-role"
  path = "/"

  assume_role_policy = <<EOF
{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Action": "sts:AssumeRole",
            "Principal": {
                "Service": "ec2.amazonaws.com"
            },
            "Effect": "Allow",
            "Sid": ""
        }
    ]
}
EOF

  tags = {
      "tigera.fr/environment" = "${var.env_name}-worker-role",
      "tigera.fr/cloudOps"    = var.orchestrator
    }
}

resource "aws_iam_role_policy" "worker_policy" {
  count = var.cloud_provider == true ? 1 : 0

  name = "${var.env_name}-worker-policy"
  role = aws_iam_role.worker_role[0].id

  policy = <<EOF
{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Action": [
        "ec2:DescribeInstances",
        "ec2:DescribeRegions",
        "ecr:GetAuthorizationToken",
        "ecr:BatchCheckLayerAvailability",
        "ecr:GetDownloadUrlForLayer",
        "ecr:GetRepositoryPolicy",
        "ecr:DescribeRepositories",
        "ecr:ListImages",
        "ecr:BatchGetImage"
      ],
      "Resource": "*"
    }
  ]
}
EOF
}

